#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node --max-old-space-size=10240"  "$basedir/../npm/bin/npx-cli.js" "$@"
else 
  exec node --max-old-space-size=10240  "$basedir/../npm/bin/npx-cli.js" "$@"
fi


#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node --max-old-space-size=10240"  "$basedir/../citygml-to-3dtiles/bin/citygml-to-3dtiles.mjs" "$@"
else 
  exec node --max-old-space-size=10240  "$basedir/../citygml-to-3dtiles/bin/citygml-to-3dtiles.mjs" "$@"
fi

